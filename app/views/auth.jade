extends bootstrap
append styles
    link(href='/stylesheets/writer.css', rel='stylesheet')
append scripts
    script(src="/js/auth.js")

block body
    .container#content
        .col-md-12
            .panel.panel-default
                .panel-heading
                    h3.panel-title
                        | Log In
                .panel-body
                    .form-group
                        label()
                            | Username
                        input(type="text" class="form-control" id="username")
                    .form-group
                        label()
                            | Password
                        input(type="password" class="form-control" id="password")
                    button(class="btn btn-default" id="login")
                        | Save
