extends bootstrap
append styles
    link(href='/stylesheets/writer.css', rel='stylesheet')
append scripts
    script(src="/js/jquery.scrollTo.min.js")
    script(src="/js/socket-writer.js")
    script(src="/js/jquery.easing.1.3.js")

block body
    .container#content
        .col-md-12
            .col-md-8
                .panel.panel-default
                    .panel-heading
                        h3.panel-title
                            | Type here
                    .panel-body
                        textarea(id="niks-text-box" class="form-control" rows="3")
                        .form-group
                            label()
                                | Title
                            input(type="text" class="form-control" id="title-name" placeholder="220 TITLE")
                        button(class="btn btn-default" id="save-cue")
                            | Save
            .col-md-4
                .panel.panel-default
                    .panel-heading
                        h3.panel-title
                            | Recall
                    .panel-body
                        table(class="table table-striped" id="cue-list")
                            tr
                                td
                                    | Page 220
                                td
                                    button(class="btn btn-default load-cue" value="page 220")
                                        | Load
                                td
                                    button(class="btn btn-default delete-cue" value="page 220")
                                        | Delete
            .col-md-12
                .panel.panel-default
                    .panel-heading
                        h3.panel-title
                            | Preview
                    .panel-body
                        #text-preview
            .col-md-6
                .panel.panel-default
                    .panel-heading
                        h3.panel-title
                            | Countdown
                    .panel-body
                        .current
                            | 
                        .buttons
                            button(class="btn btn-default" type="button" id="5s")
                                | 5s
                            button(class="btn btn-default" type="button" id="10s")
                                | 10s
                            button(class="btn btn-default" type="button" id="30s")
                                | 30s
                            button(class="btn btn-default" type="button" id="1m")
                                | 1m
                            button(class="btn btn-default" type="button" id="2m")
                                | 2m
                            button(class="btn btn-default" type="button" id="3m")
                                | 3m
            .col-md-6
                .panel.panel-default
                    .panel-heading
                        h3.panel-title
                            | Options
                    .panel-body
                        //- button(class="btn btn-default" type="button" id="flip-image")
                        //-     | Flip
                        button(class="btn btn-default" type="button" id="scroll-text-down")
                            | Scroll Down
                        button(class="btn btn-default" type="button" id="scroll-text-up")
                            | Scroll Up
                        button(class="btn btn-default" type="button" id="scroll-text-top")
                            | Scroll To Top
                        button(class="btn btn-default" type="button" id="scroll-speed-increase")
                            | Speed Up
                        button(class="btn btn-default" type="button" id="scroll-speed-decrease")
                            | Speed Down
